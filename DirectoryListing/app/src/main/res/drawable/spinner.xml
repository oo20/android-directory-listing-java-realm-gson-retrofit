<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="4000"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="720">

    <shape
        android:innerRadius="@dimen/directory_listing_spinner_size"
        android:shape="ring"
        android:thickness="@dimen/directory_listing_spinner_thickness"
        android:useLevel="false" >
        <size
            android:height="@dimen/directory_listing_image_size"
            android:width="@dimen/directory_listing_image_size" />

        <gradient
            android:centerY="0.5"
            android:endColor="@android:color/white"
            android:startColor="#bbbbbb"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>