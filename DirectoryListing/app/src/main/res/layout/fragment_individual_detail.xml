<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="@color/white"
    android:layout_margin="@dimen/generic_margin">

    <ImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="@dimen/individual_detail_image_size"
        android:layout_height="@dimen/individual_detail_image_size"
        android:layout_gravity="center"
        android:layout_margin="@dimen/generic_margin"
        android:scaleType="centerCrop"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/name_label"
            android:layout_width="@dimen/generic_label_width"
            android:layout_height="@dimen/individual_detail_label_height"
            android:text="@string/name_label"
            android:textAlignment="textEnd"
            android:enabled="false"
            android:textColor="@color/normalText"
            android:background="@color/white"
            android:layout_margin="@dimen/generic_margin"
            />

        <EditText
            android:id="@+id/name_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/individual_detail_label_height"
            android:text=""
            android:enabled="true"
            android:textColor="@color/normalText"
            android:inputType="text"
            android:layout_margin="@dimen/generic_margin"
            />

    </LinearLayout>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/born_label"
            android:layout_height="@dimen/individual_detail_label_height"
            android:layout_width="@dimen/generic_label_width"
            android:text="@string/born_label"
            android:textAlignment="textEnd"
            android:enabled="false"
            android:textColor="@color/normalText"
            android:background="@color/white"
            android:layout_margin="@dimen/generic_margin"
            />

        <EditText
            android:id="@+id/born_text"
            android:layout_height="@dimen/individual_detail_label_height"
            android:layout_width="match_parent"
            android:text=""
            android:enabled="true"
            android:textColor="@color/normalText"
            android:inputType="text"
            android:layout_margin="@dimen/generic_margin"
            />

    </LinearLayout>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/affiliation_label"
            android:layout_width="@dimen/generic_label_width"
            android:layout_height="@dimen/individual_detail_label_height"
            android:text="@string/affiliation_label"
            android:textAlignment="textEnd"
            android:enabled="false"
            android:textColor="@color/normalText"
            android:background="@color/white"
            android:layout_margin="@dimen/generic_margin"
            />

        <EditText
            android:id="@+id/affiliation_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/individual_detail_label_height"
            android:text=""
            android:enabled="true"
            android:textColor="@color/normalText"
            android:inputType="text"
            android:layout_margin="@dimen/generic_margin"
            />

    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="100"
        />


    <Button
        android:id="@+id/save_button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/generic_margin"
        android:text="Save"
        android:textAllCaps="false"
        />

</LinearLayout>

